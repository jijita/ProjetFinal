@model GestionEcole.Models.Evaluation

@{
    ViewBag.Title = "Delete";
}

<h2>@ViewBag.Title</h2>

<div class="col-xs-8 col-xs-offset-2">
    <div class="list-group">
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Etudiant.Nom)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Etudiant.Nom)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Etudiant.Prenom)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Etudiant.Prenom)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Matiere.Titre)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Matiere.Titre)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.TypeEvaluation.Type)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.TypeEvaluation.Type)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.TypeEvaluation.Ponderation)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.TypeEvaluation.Ponderation)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Note)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Note)</p>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="btn-group col-xs-12">
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
        <a class="btn btn-danger" href="/Evaluation"><span class="glyphicon glyphicon-arrow-left"></span></a>
    </div>
}