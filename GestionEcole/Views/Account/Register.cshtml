@using GestionEcole.Resources.Views.Account;
@model GestionEcole.Models.RegisterModel
@{
    ViewBag.Title = "S'enregistrer";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="col-xs-8 col-xs-offset-2">
        <fieldset>
            <legend>@ViewBag.Title</legend>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </fieldset>

        <div class="form-group col-xs-8 col-xs-offset-2">
            <button class="btn btn-lg btn-primary pull-right" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span></button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
