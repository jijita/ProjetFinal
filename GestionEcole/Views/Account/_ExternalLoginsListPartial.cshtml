@using GestionEcole.Resources.Views.Account;
@model ICollection<AuthenticationClientData>

@if (Model.Count == 0)
{
    <div class="message-info">
        <p>@_ExternalLoginsListPartial.messageInfo<a href="http://go.microsoft.com/fwlink/?LinkId=252166"></a>
        </p>
    </div>
}
else
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
    @Html.AntiForgeryToken()
    <fieldset id="socialLoginList">
        <legend>@_ExternalLoginsListPartial.legend</legend>
        <p>
                    @foreach (AuthenticationClientData p in Model)
        {
                <button type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" title=@_ExternalLoginsListPartial.Title @p.DisplayName @_ExternalLoginsListPartial.SuiteTitle">@p.DisplayName</button>
        }
        </p>
    </fieldset>
    }
}
